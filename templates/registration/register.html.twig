{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block content %}
<div class="container mt-5" style="max-width: 400px;">
    <h2 class="mb-4">Регистрация</h2>

    {% if form_errors(registrationForm) %}
        <div class="alert alert-danger">
            {{ form_errors(registrationForm) }}
        </div>
    {% endif %}

    {{ form_start(registrationForm) }}

    <div class="mb-3">
        {{ form_label(registrationForm.username, 'Имя пользователя', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.username, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.username) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.plainPassword, 'Пароль', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.plainPassword) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.surname, 'Фамилия', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.surname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.surname) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.name, 'Имя', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.name) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.patronymic, 'Отчество', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.patronymic, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.patronymic) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.email) }}
    </div>

    <div class="mb-3">
        {{ form_label(registrationForm.phone, 'Телефон', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(registrationForm.phone, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(registrationForm.phone) }}
    </div>

    <button type="submit" class="btn btn-primary w-100">Зарегистрироваться</button>

    {{ form_row(registrationForm._token) }}
    {{ form_end(registrationForm, { 'render_rest': false }) }}
</div>
{% endblock %}
