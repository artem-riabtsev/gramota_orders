{% extends 'base.html.twig' %}

{% block title %}Редактировать платеж{% endblock %}

{% block content %}
    <h1>Редактировать платеж {{ payment.id }}</h1>
    <div class="card">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.order) }}
                    {{ form_widget(form.order, {'attr': {'class': 'form-select'}}) }}
                </div>
            </div>

            <button class="btn btn-success">Сохранить</button>
            <a href="{{ app.request.headers.get('referer') ?: path('app_order_index') }}" class="btn btn-secondary">
                Назад
            </a>

            {{ form_end(form) }}
    </div>
{% endblock %}
