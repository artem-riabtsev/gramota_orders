{% extends 'base.html.twig' %}

{% block title %}Создать новый платеж{% endblock %}

{% block content %}
    <h1>Создать новый платеж</h1>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Новый платеж</h5>
        </div>
        <div class="card-body">
            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.order) }}
                    {{ form_widget(form.order, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.date) }}
                    {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.amount) }}
                    {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
                </div>
            </div>
            <button class="btn btn-success">Создать</button>
            <a href="{{ path('app_payment_index') }}" class="btn btn-secondary ms-2">Назад</a>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
