{% extends 'base.html.twig' %}

{% block title %}Payment index{% endblock %}

{% block content %}
    <h1>Payment index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Номер заказа</th>
                <th>Дата</th>
                <th>Сумма платежа</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>
                    {% if payment.order.status == 0 %}
                        <a href="{{ path('app_order_edit', {'id': payment.order.id}) }}"
                    {% else %}
                        <a href="{{ path('app_order_show', {'id': payment.order.id}) }}"
                    {% endif %}
                    class="text-muted"
                    style="text-decoration: underline; text-decoration-thickness: 1px;">
                    {{ payment.order.id }}
                </td>
                <td>{{ payment.date ? payment.date|date('d.m.Y') : '' }}</td>
                <td>{{ payment.amount }}</td>
                <td>
                    <a href="{{ path('app_payment_show', {'id': payment.id}) }}">show</a>
                    <a href="{{ path('app_payment_edit', {'id': payment.id}) }}">edit</a>
                    <form method="post" action="{{ path('app_payment_delete', {'id': payment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
                        <button class="btn">Delete</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_payment_new') }}">Create new</a>
{% endblock %}
