{% extends 'base.html.twig' %}

{% block content %}
<h1>Редактировать заказ</h1>

<div class="card mb-4">
    <div class="card-header">
        <h5 class="mb-0">Редактировать заказ #{{ order.id }}</h5>
    </div>
    <div class="card-body">
        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.date) }}
                {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.amount) }}
                {{ form_widget(form.amount, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.payment_amount) }}
                {{ form_widget(form.payment_amount, {'attr': {'class': 'form-control'}}) }}
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.customer) }}
                {{ form_widget(form.customer, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <button class="btn btn-success">Сохранить заказ</button>
        <a href="{{ path('app_order_index') }}" class="btn btn-secondary ms-2">Назад</a>
        {{ form_end(form) }}
    </div>
</div>

<h2 class="mt-5">Корзина</h2>

<form method="post" action="{{ path('app_order_edit', {'id': order.id}) }}">
    <table class="table table-hover table-bordered align-middle" id="cart-table">
        <thead>
            <tr>
                <th>Наименование</th>
                <th>Количество</th>
                <th>Цена</th>
                <th>Всего</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for cartItem in order.cart %}
                <tr>
                    <td>
                        <select name="cart[{{ cartItem.id }}][name]" class="form-select product-name" required>
                            {% for price in prices %}
                                <option value="{{ price.name }}" {% if price.name == cartItem.name %}selected{% endif %}>
                                    {{ price.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </td>
                    <td>
                        <input type="number" name="cart[{{ cartItem.id }}][quantity]" value="{{ cartItem.quantity }}" class="form-control quantity" min="1" required>
                    </td>
                    <td>
                        <input type="text" name="cart[{{ cartItem.id }}][price]" value="{{ cartItem.price }}" class="form-control price" required>
                    </td>
                    <td>
                        <input type="text" name="cart[{{ cartItem.id }}][total_amount]" value="{{ cartItem.totalAmount }}" class="form-control total-amount" required>
                    </td>
                    <td>
                        <button type="button" class="btn btn-sm btn-outline-danger remove-row">✖</button>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <button type="button" class="btn btn-outline-secondary mb-3" id="add-row">➕ Добавить строку</button>
    <br>
    <button type="submit" class="btn btn-primary">Сохранить корзину</button>
</form>

<!-- Шаблон строки -->
<script type="text/template" id="cart-row-template">
<tr>
    <td>
        <select name="cart[__index__][name]" class="form-select product-name" required>
            {% for price in prices %}
                <option value="{{ price.name }}">{{ price.name }}</option>
            {% endfor %}
        </select>
    </td>
    <td><input type="number" name="cart[__index__][quantity]" value="1" min="1" class="form-control quantity" required></td>
    <td><input type="text" name="cart[__index__][price]" class="form-control price" required></td>
    <td><input type="text" name="cart[__index__][total_amount]" class="form-control total-amount" required></td>
    <td><button type="button" class="btn btn-sm btn-outline-danger remove-row">✖</button></td>
</tr>
</script>

<script>
    const prices = {
        {% for price in prices %}
            '{{ price.name|e('js') }}': '{{ price.price }}',
        {% endfor %}
    };

    function bindCartRowEvents(row, skipInitPrice = false) {
        const nameInput = row.querySelector('.product-name');
        const priceInput = row.querySelector('.price');
        const qtyInput = row.querySelector('.quantity');
        const totalInput = row.querySelector('.total-amount');

        let userModifiedPrice = false;

        function updateFromName() {
            const name = nameInput.value;
            if (!userModifiedPrice) {
                const price = parseFloat(prices[name] || 0);
                priceInput.value = price.toFixed(2);
            }
            updateTotal();
        }

        function updateTotal() {
            const price = parseFloat(priceInput.value || 0);
            const qty = parseInt(qtyInput.value || 0);
            totalInput.value = (price * qty).toFixed(2);
        }

        nameInput.addEventListener('change', () => {
            userModifiedPrice = false;
            updateFromName();
        });

        qtyInput.addEventListener('input', updateTotal);
        priceInput.addEventListener('input', () => {
            userModifiedPrice = true;
            updateTotal();
        });

        if (!skipInitPrice) {
            updateFromName();
        }
    }

    document.querySelectorAll('#cart-table tbody tr').forEach(row => bindCartRowEvents(row, true));

    document.getElementById('add-row').addEventListener('click', () => {
        const template = document.getElementById('cart-row-template').innerHTML;
        const index = Date.now();
        const html = template.replace(/__index__/g, 'new_' + index);

        const rowWrapper = document.createElement('tbody');
        rowWrapper.innerHTML = html;
        const newRow = rowWrapper.firstElementChild;

        document.querySelector('#cart-table tbody').appendChild(newRow);
        bindCartRowEvents(newRow);
    });

    document.addEventListener('click', function (e) {
        if (e.target.classList.contains('remove-row')) {
            e.target.closest('tr').remove();
        }
    });
</script>
{% endblock %}
